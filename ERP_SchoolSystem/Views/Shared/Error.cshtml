@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}
<div class="flex-fill">
    <div class="text-center mb-3">
        <h1 class="error-title">Error</h1>
        <h5>Oops, An error occurred while processing your request.</h5>
    </div>
    <div class="row">
        <div class="col-xl-4 offset-xl-4 col-md-8 offset-md-2">
            <div class="row">
                <div class="col-sm-12">
                    <a href='@Url.Action("Index","Home")' class="btn btn-primary btn-block"><i class="icon-home4 mr-2"></i>Go Back To Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>

