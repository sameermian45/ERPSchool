        </table>
    </div>
</div>

<script>
    function AddLastSchoolRow() {
        if (document.getElementById("SchoolName").value == "")
        {
            toastr.error('Please Enter School Name');
        }
        else if (document.getElementById("ClassName").value == "")
        {
            toastr.error('Please Enter Class Name');
        }
        else if (document.getElementById("StudyGrades").value == "")
        {
            toastr.error('Please Enter Study Grades');
        }
        else if (document.getElementById("Remarks").value == "")
        {
            toastr.error('Please Enter Remarks');
        }
        else
        {
            var SchoolName = document.getElementById("SchoolName").value;
            var ClassName = document.getElementById("ClassName").value;
            var StudyGrades = document.getElementById("StudyGrades").value;
            var Remarks = document.getElementById("Remarks").value;
            var table = document.getElementById("StdLastSchool");
            var rowCount = document.getElementById('StdLastSchool').rows.length;

            var Lid = $('table tr:last').attr('id');
            var row = table.insertRow(-1);
            var RowId = parseInt(Lid) + 1;
            row.id = RowId;

            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            var cell3 = row.insertCell(2);
            var cell4 = row.insertCell(3);
            var cell5 = row.insertCell(4);

            cell1.innerHTML = '<input type="text" value="' + SchoolName + '" name="SchoolNameN" readonly="readonly" id="SchoolNameN-' + RowId + '" style="border: 0px;width: 250px"/>';
            cell2.innerHTML = '<input type="text" value="' + ClassName + '" name="ClassNameN" readonly="readonly" id="ClassNameN-' + RowId + '" style="border: 0px;width: 250px;"/>';
            cell3.innerHTML = '<input type="text" value="' + StudyGrades + '" name="StudyGradesN" readonly="readonly" id="StudyGradesN-' + RowId + '" style="border: 0px;width: 110px;"/>';
            cell4.innerHTML = '<input type="text" value="' + Remarks + '" name="RemarksN" readonly="readonly" id="RemarksN-' + RowId + '" style="border: 0px;width: 250px;"/>';
            cell5.innerHTML = '<div style="width: 110px;"> <a onclick="RemoveRow(' + RowId + ')" >Remove</a> / <a onclick="UpdateRow(' + RowId + ')">Update</a> </div>';

            document.getElementById("SchoolName").value = "";
            document.getElementById("ClassName").value = "";
            document.getElementById("StudyGrades").value = "";
            document.getElementById("Remarks").value = "";
        }
    }

    function RemoveRow(RowId) {
        var _confirm = confirm("Are you sure you want to delete this record?");
        if (_confirm)
        {
            $("#" + RowId).remove();
        }
    }
    function UpdateRow(RowId) {
        document.getElementById("SchoolName").value = document.getElementById("SchoolNameN-" + RowId + "").value;
        document.getElementById("ClassName").value = document.getElementById("ClassNameN-" + RowId + "").value;
        document.getElementById("StudyGrades").value = document.getElementById("StudyGradesN-" + RowId + "").value;
        document.getElementById("Remarks").value = document.getElementById("RemarksN-" + RowId + "").value;
        $("#" + RowId).remove();
    }
</script>
